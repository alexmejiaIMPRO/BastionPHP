cat > app/Middleware/AuthMiddleware.php <<'PHP'
<?php
namespace App\Middleware;
use App\Core\Auth;
use App\Core\CSRF;
class AuthMiddleware {
    public function handle($req, $next) {
        // Load user into global state if token present
        Auth::check($req);
        // Global CSRF can be registered separately — this keeps compatibility
        if (filter_var(getenv('CSRF_ENABLED') ?: 'true', FILTER_VALIDATE_BOOLEAN)) {
            // CSRF::handle is middleware-compatible; use it
            return \App\Core\CSRF::handle($req, $next);
        }
        return $next($req);
    }
}
PHP

cat > app/Middleware/AdminOnly.php <<'PHP'
<?php
namespace App\Middleware;
use App\Core\Response;
class AdminOnly {
    public function handle($req, $next) {
        $user = auth();
        if (!$user || ($user['role'] ?? '') !== 'admin') {
            Response::abort(403, 'Admin Access Required');
        }
        return $next($req);
    }
}
