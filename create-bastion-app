if command -v composer >/dev/null 2>&1; then
    composer install --no-interaction --quiet || warn="composer install failed"
else
    warn="composer not found; skip composer install"
fi

if command -v npm >/dev/null 2>&1; then
    npm install --silent || echo "npm install failed (run manually)"
else
    echo "npm not found; skip npm install"
fi

info "Running initial migrations and seeders..."
# Best-effort run via artisan shim
php artisan migrate || true
php artisan db:seed || true

# Make sure CLI executables are executable
chmod +x artisan || true
chmod +x bastion || true

echo ""
success "Bastion v1 Enterprise ($PROJECT) created successfully!"
echo ""
echo -e "${BLUE}Start:${NC} cd $PROJECT && ./bastion run-dev"
echo -e "${BLUE}Admin demo:${NC} admin@example.com / password (change immediately)"
echo ""
info "Security reminder: set SECURE_COOKIES=true, rotate APP_KEY and JWT_SECRET before production."

exit 0
