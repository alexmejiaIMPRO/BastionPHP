cat > app/login/+server.php <<'PHP'
<?php
use App\Core\Auth;
use App\Core\Response;

return [
    'post' => function($req) {
        $tokens = Auth::attempt($req->input('email'), $req->input('password'));
        if ($tokens === false) {
            Response::redirect('/login?error=1');
        }
        $secure = filter_var(getenv('SECURE_COOKIES') ?: 'false', FILTER_VALIDATE_BOOLEAN);
        // Access cookie (JS access allowed) - short lived
        setcookie('access', $tokens['access'], [
            'expires' => $tokens['expires'],
            'path' => '/',
            'secure' => $secure,
            'httponly' => false,
            'samesite' => 'Lax'
        ]);
        // Refresh cookie - HttpOnly, long lived
        setcookie('refresh', $tokens['refresh'], [
            'expires' => time() + (int)(getenv('JWT_REFRESH_TTL') ?: 604800),
            'path' => '/',
            'secure' => $secure,
            'httponly' => true,
            'samesite' => 'Lax'
        ]);
        Response::redirect('/admin');
    }
];
PHP

